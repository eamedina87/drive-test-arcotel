<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/medicionBg"
    >

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textAppearance="@style/MyHistorialTitle"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10sp"

        />


    <TextView
        android:id="@+id/fechaInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-Mar 15h00"
        android:layout_below="@+id/nombre"
        android:layout_marginLeft="10sp"
        />

    <TextView
        android:id="@+id/fechaFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-Mar 20h12"
        android:layout_below="@+id/fechaInicio"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"

        />

    <ImageView
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/btnstates"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5sp"
        android:visibility="gone"
        android:id="@+id/btnBorrar"/>

    <View
        android:layout_below="@+id/fechaFin"
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="#000"/>

</RelativeLayout>